<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dharamvirsingh.hangover.Play_Game"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/iv1"
        android:background="@drawable/star"
        android:layout_above="@+id/iv3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/iv2"
        android:background="@drawable/star"
        android:layout_alignBottom="@+id/iv1"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/iv3"
        android:background="@drawable/star"
        android:layout_above="@+id/iv5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/iv4"
        android:background="@drawable/star"
        android:layout_alignTop="@+id/iv3"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/iv5"
        android:background="@drawable/star"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/iv6"
        android:background="@drawable/star"
        android:layout_alignTop="@+id/iv5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose To Play"
        android:id="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="#f10f0f"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bollywood"
        android:id="@+id/tv1"
        android:textStyle="bold"
        android:textColor="#fef502"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignTop="@+id/iv1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/iv1"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hollywood"
        android:id="@+id/textView6"
        android:textStyle="bold"
        android:textColor="#fef502"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignTop="@+id/tv1"
        android:layout_alignStart="@+id/iv2"
        android:layout_alignEnd="@+id/iv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tollywood"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:textColor="#fef502"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignTop="@+id/iv3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/iv3"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tv Series"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:textColor="#fef502"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/iv4"
        android:layout_alignEnd="@+id/iv4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Music"
        android:id="@+id/textView9"
        android:textStyle="bold"
        android:textColor="#fef502"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignTop="@+id/iv5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/iv5"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="BACK TO MAIN MENU"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:textColor="#fef502"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignTop="@+id/iv6"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/iv6"
        android:layout_marginTop="20dp" />
</RelativeLayout>

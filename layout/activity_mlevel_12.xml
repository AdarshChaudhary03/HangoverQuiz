<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tauphiq.hide__seek.MLevel_1"
    android:background="@drawable/background5">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="B"
            android:id="@+id/b"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onBclick"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="C"
            android:id="@+id/c"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="D"
            android:id="@+id/d"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="F"
            android:id="@+id/f"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="G"
            android:id="@+id/g"
            android:layout_row="0"
            android:layout_column="4" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="H"
            android:id="@+id/h"
            android:layout_row="0"
            android:layout_column="5" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="J"
            android:id="@+id/j"
            android:layout_row="0"
            android:layout_column="6" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="K"
            android:id="@+id/k"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="L"
            android:id="@+id/l"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="M"
            android:id="@+id/m"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="N"
            android:id="@+id/n"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="P"
            android:id="@+id/p"
            android:layout_row="1"
            android:layout_column="4" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="Q"
            android:id="@+id/q"
            android:layout_row="1"
            android:layout_column="5" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="R"
            android:id="@+id/r"
            android:layout_row="1"
            android:layout_column="6" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="S"
            android:id="@+id/s"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="T"
            android:id="@+id/t"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="V"
            android:id="@+id/v"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="W"
            android:id="@+id/w"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="X"
            android:id="@+id/x"
            android:layout_row="2"
            android:layout_column="4" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="Y"
            android:id="@+id/y"
            android:layout_row="2"
            android:layout_column="5" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="Z"
            android:id="@+id/z"
            android:layout_row="2"
            android:layout_column="6" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="1"
            android:id="@+id/b1"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="2"
            android:id="@+id/b2"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="3"
            android:id="@+id/b3"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="4"
            android:id="@+id/b4"
            android:layout_row="3"
            android:layout_column="4" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="5"
            android:id="@+id/b5"
            android:layout_row="3"
            android:layout_column="5" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/gridLayout2"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="35dp"
            android:layout_height="55dp"
            android:id="@+id/tv1"
            android:layout_row="0"
            android:layout_column="0"
            android:textAlignment="inherit"
            android:textColor="#621aa1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#d37f5e"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="90dp" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="1"
            android:textAlignment="inherit"
            android:textColor="#621aa1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#d37f5e"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="0dp"
            android:text="I" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="55dp"
            android:id="@+id/tv3"
            android:layout_row="0"
            android:layout_column="2"
            android:textAlignment="inherit"
            android:textColor="#621aa1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#d37f5e"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="0dp" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="55dp"
            android:id="@+id/tv4"
            android:layout_row="0"
            android:layout_column="3"
            android:textAlignment="inherit"
            android:textColor="#621aa1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#d37f5e"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="0dp" />

    </GridLayout>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/i3"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/gridLayout2"
        android:background="@android:drawable/ic_delete" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/i2"
        android:background="@android:drawable/ic_delete"
        android:layout_alignTop="@+id/i3"
        android:layout_toStartOf="@+id/i3" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/i1"
        android:background="@android:drawable/ic_delete"
        android:layout_alignTop="@+id/i2"
        android:layout_toStartOf="@+id/i2" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ib"
        android:background="@android:drawable/ic_menu_help"
        android:layout_alignBottom="@+id/playm"
        android:layout_toEndOf="@+id/i2" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listen the audio first..!!"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#990e0e"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/playm"
        android:background="@android:drawable/ic_media_play"
        android:layout_below="@+id/i1"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess the movie ??"
        android:id="@+id/textView12"
        android:textColor="#990e0e"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/playm"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/playm"
        android:background="@drawable/shin"
        android:layout_above="@+id/textView12" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/pausem"
        android:background="@android:drawable/ic_media_pause"
        android:layout_alignTop="@+id/playm"
        android:layout_toEndOf="@+id/playm" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/clock"
        android:textColor="#f20707"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_below="@+id/i2"
        android:layout_alignEnd="@+id/i2" />

</RelativeLayout>
